rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======== Helper Functions ========
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "smart46@gmail.com";
    }

    function isTeacher() {
      // Checks if the requesting user's email exists as a document ID in the teachers collection.
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.token.email));
    }
    
    function getTeacherDepartment() {
        return get(/databases/$(database)/documents/teachers/$(request.auth.token.email)).data.department;
    }
    
    function getStudentEmail(studentRegister) {
        return get(/databases/$(database)/documents/students/$(studentRegister)).data.email;
    }

    // ======== Path Rules ========
    
    // Publicly readable institution profile
    match /institution/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Teachers collection
    match /teachers/{email} {
      // Admins can list all teachers.
      allow list: if isAdmin();
      
      // An admin can get any teacher's document.
      // A teacher can get their OWN document (e.g., for login role check).
      allow get: if isAdmin() || (isTeacher() && request.auth.token.email == email);

      // Only admins can create, update, or delete teachers.
      allow write: if isAdmin();
    }

    // Students collection
    match /students/{studentId} {
      // Admins and Teachers can read all student data.
      allow read: if isAdmin() || isTeacher();
      // Only admins can write student data.
      allow write: if isAdmin();
    }

    // Attendance records collection
    match /attendance/{attendanceId} {
      // Admins have full access.
      allow read, write: if isAdmin();
      
      // Teachers can read attendance records from their own department.
      // This relies on the client query being `where('department', '==', user.department)`
      allow list: if isTeacher() && request.query.where.department == getTeacherDepartment();

      // Students can read their own attendance records.
      // This relies on the client query being `where('studentRegister', '==', user.registerNumber)`
      allow list: if isSignedIn() && request.query.where.studentRegister != null && getStudentEmail(request.query.where.studentRegister) == request.auth.token.email;

      // Allow getting a single document if admin, or student owns it. Teacher GET is covered by their department's records being readable.
      allow get: if isAdmin() || 
                   (isSignedIn() && get(/databases/$(database)/documents/attendance/$(attendanceId)).data.studentRegister != null && getStudentEmail(get(/databases/$(database)/documents/attendance/$(attendanceId)).data.studentRegister) == request.auth.token.email);
    }
    
    // Default deny all other paths.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
