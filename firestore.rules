rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======== Helper Functions ========
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "apdd46@gmail.com";
    }

    function isTeacher() {
      // Checks if the requesting user's email exists as a document ID in the teachers collection.
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.token.email));
    }
    
    function getTeacherDepartment() {
        return get(/databases/$(database)/documents/teachers/$(request.auth.token.email)).data.department;
    }
    
    function getStudentEmail(studentRegister) {
        return get(/databases/$(database)/documents/students/$(studentRegister)).data.email;
    }

    // ======== Path Rules ========
    
    // Publicly readable institution profile
    match /institution/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Teachers collection
    match /teachers/{email} {
      // Any signed in user can read teacher data (for role checks)
      allow read: if isSignedIn();
      // Only admins can create, update, or delete teachers.
      allow write: if isAdmin();
    }

    // --- Students ---
    match /students/{studentId} {
      // Allow getting a single document for profile lookups and functions.
      allow get: if isSignedIn();
      // Only admins can modify student documents.
      allow write: if isAdmin();
    }
    match /students {
      // Admins can list all students.
      // Teachers can list students from their department.
      // A user can query for their own profile by email during login.
      allow list: if isAdmin() ||
                    (isTeacher() && request.query.where.department == getTeacherDepartment()) ||
                    (isSignedIn() && request.query.where.email == request.auth.token.email);
    }


    // --- Attendance ---
    match /attendance/{attendanceId} {
      // Admins can write. Get is handled below.
      allow write: if isAdmin();
      
      // Admins can get any doc. Students can get their own.
      allow get: if isAdmin() || 
                   (isSignedIn() && get(/databases/$(database)/documents/attendance/$(attendanceId)).data.studentRegister != null && getStudentEmail(get(/databases/$(database)/documents/attendance/$(attendanceId)).data.studentRegister) == request.auth.token.email);
    }
    match /attendance {
        // Define who can query the attendance collection.
        allow list: if isAdmin() ||
                      (isTeacher() && request.query.where.department == getTeacherDepartment()) ||
                      (isSignedIn() && request.query.where.studentRegister != null && getStudentEmail(request.query.where.studentRegister) == request.auth.token.email);
    }
    
    // Default deny all other paths.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
