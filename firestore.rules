
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ======== Helper Functions ========
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email == "apdd46@gmail.com";
    }

    function isTeacher() {
      // Checks if the requesting user's email exists as a document ID in the teachers collection.
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.token.email));
    }
    
    function getTeacherDepartment() {
        return get(/databases/$(database)/documents/teachers/$(request.auth.token.email)).data.department;
    }

    // ======== Path Rules ========
    
    // Publicly readable institution profile
    match /institution/{profileId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Teachers collection
    match /teachers/{email} {
      // Admins can read/write. A teacher can read their own profile.
      allow read: if isAdmin() || (isSignedIn() && request.auth.token.email == email);
      allow write: if isAdmin();
    }
    match /teachers {
        // Only admins can list all teachers.
        allow list: if isAdmin();
    }

    // --- Students ---
    match /students/{studentId} {
      // Define who can read student data (get and list).
      // A query will succeed only if every document in its potential result set is readable by the user.
      allow read: if isAdmin() || 
                   (isTeacher() && resource.data.department == getTeacherDepartment()) ||
                   (isSignedIn() && resource.data.uid == request.auth.uid);

      // Only admins can create, update, or delete students.
      allow write: if isAdmin();
    }


    // --- Attendance ---
    match /attendance/{attendanceId} {
      // Define who can read attendance data (get and list)
      allow read: if isAdmin() ||
                   (isTeacher() && resource.data.department == getTeacherDepartment()) ||
                   (isSignedIn() && resource.data.studentUid == request.auth.uid);

      // Admins can create/update. Teachers can only do so for their department.
      allow create: if isAdmin() || 
                       (isTeacher() && request.resource.data.department == getTeacherDepartment());

      allow update: if isAdmin() ||
                       (isTeacher() && resource.data.department == getTeacherDepartment());
      
      // Only admins can delete.
      allow delete: if isAdmin();
    }
    
    // Default deny all other paths.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
